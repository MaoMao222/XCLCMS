@{
    Layout = "~/Views/MasterView/Main.cshtml";
}
@model XCLCMS.View.AdminWeb.Models.Ads.AdsListVM

<form>

    <div class="XCLPanel" style="margin-top:5px;">
        <div class="XCLPanelHeader">
            @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Data.CommonHelper.Function.FunctionEnum.Ads_Add))
            {
                <a href="@(string.Format("{0}Ads/Add",XCLNetTools.StringHander.Common.RootUri))" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加</a>
            }
            @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Data.CommonHelper.Function.FunctionEnum.Ads_Edit))
            {
                <a href="@(string.Format("{0}Ads/Add",XCLNetTools.StringHander.Common.RootUri))" id="btnUpdate" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改</a>
            }
            @if (XCLCMS.Lib.Permission.PerHelper.HasPermission(ViewBag.UserID, XCLCMS.Data.CommonHelper.Function.FunctionEnum.Ads_Del))
            {
                <a href="javascript:void(0);" id="btnDel" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删除</a>
            }
        </div>
        <div class="XCLPanelBody">
            <div>
                @Html.Raw(Model.Search.XCLNetSearchHTML())
            </div>
            <table class="XCLTableList">
                <tr class="XCLTableHeader XCLTableNoHover">
                    <td>
                        <input type="checkbox" class="XCLTableCheckAll" value="" />
                    </td>
                    <td>序号</td>
                    <td>广告ID</td>
                    <td>所属商户</td>
                    <td>所属应用</td>
                    <td>唯一标识</td>
                    <td>类型</td>
                    <td>标题</td>
                    <td>链接地址</td>
                    <td>开始时间</td>
                    <td>结束时间</td>
                    <td>电子邮件</td>
                    <td>手机号</td>
                    <td>记录状态</td>
                    <td>创建时间</td>
                    <td>更新时间</td>
                </tr>
                @{
                    if (Model.AdsList.IsNotNullOrEmpty())
                    {
                        for (int i = 0; i < Model.AdsList.Count; i++)
                        {
                            var m = Model.AdsList[i];
                            <tr>
                                <td align="center"><input type="checkbox" class="XCLTableCheckItem" value="@m.AdsID" /></td>
                                <td align="center">
                                    @(Model.PagerModel.StartIndex + i)
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("Show","Ads",new { AdsID=m.AdsID})" target="_blank">@m.AdsID</a>
                                </td>
                                <td align="center">
                                    @m.MerchantName
                                </td>
                                <td>@m.MerchantAppName</td>
                                <td>@m.Code</td>
                                <td>@XCLNetTools.Enum.EnumHelper.GetEnumDescriptionByText(typeof(XCLCMS.Data.CommonHelper.EnumType.AdsTypeEnum), m.AdsType)</td>
                                <td><a href="@Url.Action("Show","Ads",new { AdsID=m.AdsID})" target="_blank">@m.Title</a></td>
                                <td>@m.URL</td>
                                <td>@string.Format("{0:yyyy-MM-dd}", m.StartTime)</td>
                                <td>@string.Format("{0:yyyy-MM-dd}", m.EndTime)</td>
                                <td>@m.Email</td>
                                <td>@m.Tel</td>
                                <td align="center" class="@(XCLCMS.View.AdminWeb.Common.WebCommon.GetRecordStateClass(m.RecordState))">@XCLNetTools.Enum.EnumHelper.GetEnumDescriptionByText(typeof(XCLCMS.Data.CommonHelper.EnumType.RecordStateEnum), m.RecordState)</td>
                                <td align="center">@string.Format("{0:yyyy-MM-dd HH:mm:ss}", m.CreateTime)</td>
                                <td align="center">@string.Format("{0:yyyy-MM-dd HH:mm:ss}", m.UpdateTime)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="100" align="center">
                                暂无数据！
                            </td>
                        </tr>
                    }
                }
            </table>

            @Html.Partial("~/Views/UserControl/XCLPager.cshtml", Model.PagerModel)
        </div>
    </div>
</form>

<div class="XCLPanel" style="margin-top: 5px;">
    <div class="XCLPanelHeader XCLBolder">
        操作说明：
    </div>
    <div class="XCLPanelBody">
        <ul>
            <li>1、模块说明：用于管理页面广告的发布信息。</li>
        </ul>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        window.xclcms.Ads.AdsList.Init();
    });
</script>